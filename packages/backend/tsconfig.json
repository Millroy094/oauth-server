{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["es2022"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "strict": true
  },
  "include": ["."],
  "exclude": ["node_modules", "**/*.test.ts"]
}
